{
  "name": "string-punctuation-tokenizer",
  "version": "0.9.3",
  "description": "Small library that provides functions to tokenize a string into an array of words with or without punctuation",
  "main": "lib/index.js",
  "scripts": {
    "test": "eslint ./src ./index.js && jest",
    "fix": "eslint ./src ./index.js --fix",
    "build": "babel ./src -d ./lib",
    "compile": "rimraf lib && babel src/ -d lib/",
    "prebuild": "rm -rf ./lib",
    "prepare": "if [ ! -d './lib/' ]; then npm run build; fi",
    "prepublish": "npm run compile",
    "postpublish": "git tag v$npm_package_version && git push origin v$npm_package_version"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/string-punctuation-tokenizer.git"
  },
  "keywords": [
    "string",
    "punctuation",
    "tokenizer"
  ],
  "author": "@unfoldingword",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/translationCoreApps/string-punctuation-tokenizer/issues"
  },
  "homepage": "https://github.com/translationCoreApps/string-punctuation-tokenizer#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "rimraf": "^2.6.2",
    "transform-runtime": "0.0.0",
    "xregexp": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.18.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-jest": "^21.12.2",
    "jest": "^22.4.2"
  }
}
