{
  "name": "string-punctuation-tokenizer",
  "version": "0.9.4",
  "description": "Small library that provides functions to tokenize a string into an array of words with or without punctuation",
  "main": "lib/index.js",
  "scripts": {
    "start": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "predeploy": "yarn styleguide:build",
    "deploy": "gh-pages -d styleguide",
    "test": "eslint ./src && jest",
    "fix": "eslint ./src --fix",
    "build": "babel ./src -d ./lib --ignore '**/__tests__,**/__mocks__'",
    "compile": "rimraf lib && babel src/ -d lib/ --ignore '**/__tests__,**/__mocks__'",
    "prebuild": "rm -rf ./lib",
    "prepare": "if [ ! -d './lib/' ]; then npm run build; fi",
    "prepublishOnly": "yarn test && yarn run compile",
    "postpublish": "yarn deploy"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/translationCoreApps/string-punctuation-tokenizer.git"
  },
  "keywords": [
    "string",
    "punctuation",
    "tokenizer"
  ],
  "author": "@unfoldingword",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/translationCoreApps/string-punctuation-tokenizer/issues"
  },
  "homepage": "https://github.com/translationCoreApps/string-punctuation-tokenizer#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "rimraf": "^2.6.2",
    "transform-runtime": "0.0.0",
    "xregexp": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.10.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-jest": "^22.1.2",
    "gh-pages": "^2.0.1",
    "jest": "^23.6.0",
    "lodash": "^4.17.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "react-styleguidist": "^9.0.5"
  }
}
